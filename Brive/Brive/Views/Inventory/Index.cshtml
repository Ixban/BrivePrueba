@model List<ModelLayer.Inventory>
<div class="adminx-content">
    <div class="adminx-main-content">
        <div class="container-fluid">
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb adminx-page-breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Inventario</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Listado Inventario</li>
                </ol>
            </nav>

            <div class="pb-3">
                <h1>Inventario</h1>
                <button class="btn btn-sm btn-primary" onclick="openModalInventory()">Asignar Producto</button>
            </div>

            <div class="row">
                <div class="col">
                    <div class="card mb-grid">
                        <div class="table-responsive-md">
                            <table class="table table-actions table-striped table-hover mb-0" data-table-5>
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            <label class="custom-control custom-checkbox m-0 p-0">
                                                <input type="checkbox" class="custom-control-input table-select-all">
                                                <span class="custom-control-indicator"></span>
                                            </label>
                                        </th>
                                        <th scope="col">Cantidad</th>
                                        <th scope="col">Producto</th>
                                        <th scope="col">Sucursal</th>
                                        <th scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (ModelLayer.Inventory inventory in Model)
                                    {
                                        <tr>
                                            <th scope="row">
                                                <label class="custom-control custom-checkbox m-0 p-0">
                                                    <input type="checkbox" class="custom-control-input table-select-row">
                                                    <span class="custom-control-indicator"></span>
                                                </label>
                                            </th>
                                            <td>@inventory.amount</td>
                                            <td>@inventory.product.name</td>
                                            <td>@inventory.sucursal.sucursalName</td>
                                            <td>
                                                <button class="btn btn-sm btn-primary" onclick="editInventory(@inventory.id)">Editar</button>
                                                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Inventory", new { id = int.Parse(inventory.id.ToString()) })">Eliminar</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="#" id="formInventory" onsubmit="return validateFormInventory()">
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="inputNomb" class="col-sm-2 col-form-label">Cantidad Producto</label>
                        <div class="col-sm-10">
                            <input type="hidden" id="inputId">
                            <input type="text" class="form-control" id="inputCantidad" placeholder="Cantidad">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputApellidoP" class="col-sm-2 col-form-label">SKU</label>
                        <div class="col-sm-10">
                            <select id="selectProduct" name="selectProduct" class="form-control">
                                <option value="0">Seleccion Un Producto</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputApellidoP" class="col-sm-2 col-form-label">SKU</label>
                        <div class="col-sm-10">
                            <select id="selectSucursal" name="selectSucursal" class="form-control">
                                <option value="0">Selecciona Una Sucursal</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclik="closeModalInventory">cerrar</button>
                    <button type="button" class="btn btn-primary" id="Action">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>






